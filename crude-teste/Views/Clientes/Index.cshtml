@{
    ViewData["Title"] = "Clientes";
}

<div class="container">
    <h2>Gerenciamento de Clientes</h2>

    <div id="mensagens">
        <!-- Alertas serão adicionados aqui via JavaScript -->
    </div>

    <div class="mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Novo Cliente
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table id="tabela-clientes" class="table table-striped">
                <thead>
                    <tr>
                        <th>Razão Social</th>
                        <th>Nome Fantasia</th>
                        <th>Documento</th>
                        <th>Cidade/UF</th>
                        <th>Telefones</th>
                        <th class="text-right">Ações</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cliente.js"></script>
}